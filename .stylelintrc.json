{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "string-quotes": "single",
    "indentation": [2],
    "selector-class-pattern": null,
    "rule-empty-line-before": [
      "always-multi-line",
      {
        "ignore": [
          "after-comment",
          "first-nested",
          "empty-lines"
        ]
      }
    ],
    "no-missing-end-of-source-newline": []
  }
}